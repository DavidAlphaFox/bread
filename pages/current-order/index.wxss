.orders-bar{
  display: flex;
  margin-top: 20rpx;
  margin-left: 40rpx;
  
  background-color: #f5f5f5;
  width: 670rpx;
  border-radius: 12rpx;
}
.orders-bar .current-orders{
  width: 332rpx;
  border-radius: 12rpx;
  background-color: #ffe000;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f1f1f;
  text-align: center;
  line-height: 92rpx;
}
.orders-bar .previous-orders{
  font-size: 32rpx;
  border-radius: 12rpx;
  font-weight: 600;
  color: #1f1f1f;
  margin-left: 108rpx;
  line-height: 92rpx;
}
.no-orders{
  margin-top: 450rpx;
  
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
  color: #1f1f1f;
}
.order-details-bar{
  margin-left:40rpx ;
  margin-top: 40rpx;
  padding-top: 30rpx;
  width: 670rpx;
  height: 416rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.06), 0 12rpx 32rpx 0 rgba(0, 0, 0, 0.06);
  background-color: #fffefd;
}
.order-details-bar .shops-tatle-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left:30rpx ;
  margin-right: 30rpx;
}
.order-details-bar .shops-tatle-box .shop-tatle{
  
  font-size: 26rpx;
  font-weight: 600;
  color: #1f1f1f;
}
.order-details-bar .shops-tatle-box .unpaid-bar{
  
  display: flex;
  font-size: 24rpx;
  font-weight: 600;
  color: #1f1f1f;
  align-items: center;

}

.order-details-bar .shops-tatle-box .unpaid-bar .unpaid{
  border-radius: 6rpx;
  background-color: #ffe000;
  height: 42rpx;
  text-align: center;
  line-height: 42rpx;
  padding: 0 12rpx;
}
.order-details-bar .shops-tatle-box .unpaid-bar .go{
  width: 32rpx;
  height: 32rpx;
  object-fit: contain;
  margin-left:10rpx ;
}
.order-details-bar .order-number{
  
  font-size: 24rpx;
  color: #8a8a8a;
  margin-top: 10rpx;
  margin-left:30rpx ;
}
.order-details-bar .order-time{
  
  font-size: 24rpx;
  color: #8a8a8a;
  margin-top: 10rpx;
  margin-left:30rpx ;
}
.order-details-bar .goods-photo{
  display: flex;
  margin: 20rpx 0rpx 20rpx 30rpx;

}
.order-details-bar .goods-photo .goods{
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background-color: #f5f5f5;
  margin-right: 20rpx;
}
.blank{
  width: 610rpx;
  height: 2rpx;
  background-color: #ebebeb;

  margin-left:30rpx ;
}

.order-details-bar .botton-bar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:20rpx 30rpx  ;
}
.order-details-bar .botton-bar .price{
  display: flex;
  align-items: flex-end;
  
  font-size: 32rpx;
  color: #fa5c01;
}
.order-details-bar .botton-bar .price text{
  font-size: 22rpx;
  font-weight: 600;
  color: #fa5c01;
  height: 32rpx;
  margin-right: 6rpx;
}
.order-details-bar .botton-bar .botton-box{
  display: flex;
  align-items: center;

}
